---
interface Props {
  title: string;
  text: string;
  imageSrc?: string;
}

const { title, text, imageSrc } = Astro.props;
---

<section class="game-info-section">
  <div class="container">
    <div class="content-wrapper">
      <div class="left-content">
        <h2 class="section-title">{title}</h2>
        <p class="section-text">{text}</p>
      </div>
      <div class="right-content">
        <img src={imageSrc} alt="Game title image" style="max-width: 80%; height: auto;" />
      </div>
    </div>
  </div>
</section>

<style>
  .game-info-section {
    padding: 4rem 0;
  }
  
  .container {
    max-width: 2000px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .content-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4rem;
    min-height: 400px;
  }
  
  .left-content {
    flex: 1;
    max-width: 800px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .right-content {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100%;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1.5rem;
    text-align: left;
    color: var(--text-color);
  }
  
  .section-text {
    font-size: 1.1rem;
    line-height: 1.6;
    text-align: left;
    color: var(--text-color);
  }
  
  .big-title {
    font-size: 5rem;
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--accent-color);
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .game-info-section {
      padding: 2rem 0;
    }
    
    .content-wrapper {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
    
    .left-content {
      max-width: 100%;
    }
    
    .section-title {
      font-size: 2rem;
      text-align: center;
    }
    
    .big-title {
      font-size: 2.5rem;
    }
  }
</style>
