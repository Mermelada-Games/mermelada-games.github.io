---
import SocialIcon from '../components/SocialIcon.astro';
import { t, getLocaleFromPath } from '../utils/i18n.js';
const lang = getLocaleFromPath(Astro.url.pathname);
---

<footer class="footer-responsive">
  <div class="footer-content">
    <div class="footer-row">
      <div class="footer-logo-group">
        <img src="/assets/Logo.svg" alt="Logo" class="footer-logo" />
        <img src="/assets/MermeladaGames.svg" alt="Mermelada Games" class="footer-logo" />
      </div>
      <div class="footer-spacer"></div>
      <SocialIcon href="https://mermelada-games.itch.io/" img="/assets/itchio.svg" alt="Itchio logo" label="Itchio" />
      <SocialIcon href="https://www.instagram.com/mermelada.games/" img="/assets/instagram.svg" alt="Instagram logo" label="Instagram" />
      <SocialIcon href="https://www.linkedin.com/company/mermeladagames" img="/assets/linkedin.svg" alt="Linkedin logo" label="Linkedin" />
      <SocialIcon href="https://x.com/gamesmermelada" img="/assets/x.svg" alt="X logo" label="X" />
      <SocialIcon href="https://www.youtube.com/@MermeladaGames" img="/assets/youtube.svg" alt="Youtube logo" label="Youtube" />
      <!-- <SocialIcon href="" img="/assets/discord.svg" alt="Discord logo" label="Discord" /> -->
      <SocialIcon href="https://mail.google.com/mail/?view=cm&fs=1&to=gamesmermelada@gmail.com" img="/assets/mail.svg" alt="Mail icon" label="gamesmermelada@gmail.com" />
    </div>
    <div class="footer-bottom">
      <span class="footer-copyright">Â© {new Date().getFullYear()} Mermelada Games</span>
      <span class="footer-legal">{t('footer-legal', lang)}</span>
    </div>
  </div>
  <style>
    .footer-responsive {
      background: var(--background-color);
      border-top: 1px solid var(--primary-color);
      padding: 3rem 5rem;
      font-family: inherit;
      width: 100%;
    }
    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      width: 100%;
    }
    .footer-row {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: 2rem;
      flex-wrap: wrap;
      width: 100%;
    }
    .footer-logo-group {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 0.7rem;
    }
    .footer-logo {
      height: 48px;
      width: auto;
    }
    .footer-spacer {
      flex: 1;
    }
    .footer-bottom {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      margin-top: 3rem;
      gap: 1rem;
      box-sizing: border-box;
    }
    .footer-copyright {
      color: var(--text-color);
      font-size: 1.2rem;
      text-align: left;
    }
    .footer-legal {
      color: var(--text-color);
      font-size: 1rem;
      text-align: right;
    }
    @media (max-width: 767px) {
      .footer-responsive {
        padding: 2rem 1.2rem;
      }
      .footer-row {
        flex-direction: column;
        align-items: stretch;
        gap: 1.2rem;
      }
      .footer-logo-group {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.3rem;
      }
      .footer-logo {
        height: 40px;
        margin: 0 auto;
      }
      .footer-bottom {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.7rem;
        margin-top: 2rem;
      }
      .footer-copyright, .footer-legal {
        text-align: left;
        font-size: 1rem;
      }
    }
  </style>
</footer>
