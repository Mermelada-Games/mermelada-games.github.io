---
import AboutButton from "../components/AboutButton.astro";
const { imgSrc, imgSrcs, title, text, imgPosition = "left", imgSize, showButton = false, buttonLabel, buttonHref, buttonNewTab } = Astro.props;
const sectionClass = imgPosition === 'right' ? 'about-section about-section--reverse' : 'about-section';
const imgClass = imgSize === "large" ? "about-img about-img--large" : "about-img";
import { Image } from "astro:assets"; 
---
<section class={sectionClass}>
  {imgSrcs && Array.isArray(imgSrcs) ? (
    <div class="about-imgs-column">
      {imgSrcs.map((src, idx) => (
        <img src={src} alt={title} class={imgClass} style="margin-bottom: 1rem;" />
      ))}
    </div>
  ) : (
    <img src={imgSrc} alt={title} class={imgClass} />
  )}
  <div class="about-content">
    <h2 class="about-title">{title}</h2>
    <p class="about-text">{text}</p>
    {showButton && (
      <AboutButton href={buttonHref} label={buttonLabel} newTab={buttonNewTab} />
    )}
  </div>
</section>
<style>
  .about-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    width: 100%;
    margin: 3rem 0;
    padding-left: 20vw;
    padding-right: 20vw;
    gap: 2rem;
  }
  .about-section--reverse {
    flex-direction: row-reverse;
  }
  .about-img {
    width: 300px;
    height: auto;
    border-radius: 1rem;
  }
  .about-img--large {
    width: 600px;
    max-width: 100%;
  }
  .about-imgs-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .about-content {
    max-width: 700px;
    text-align: left;
  }
  .about-title {
    text-align: left;
    margin-bottom: 1rem;
  }
  .about-text {
    text-align: left;
  }
  @media (max-width: 767px) {
    .about-section {
      flex-direction: column !important;
      padding-left: 1.2rem !important;
      padding-right: 1.2rem !important;
      gap: 1.5rem !important;
      align-items: stretch !important;
    }
    .about-img,
    .about-img--large {
      width: 100% !important;
      max-width: 350px;
      margin: 0 auto;
      display: block;
    }
    .about-imgs-column {
      align-items: center;
    }
  }
</style>