---
const { imgSrc, title, text, imgPosition = "left" } = Astro.props;
const flexDirection = imgPosition === 'right' ? 'row-reverse' : 'row';
const justifyContent = 'space-between';
---

<section style={`
  display: flex; 
  align-items: center; 
  justify-content: ${justifyContent};
  flex-direction: ${flexDirection};
  width: 100%;
  margin: 3rem 0;
  padding-left: 20vw;
  padding-right: 20vw;
  gap: 2rem;
`}>
  <img src={imgSrc} alt={title} style="width: 300px; height: auto; border-radius: 1rem;" />
  <div style="max-width: 700px; text-align: left;">
    <h2 style="text-align: left; margin-bottom: 1rem;">{title}</h2>
    <p style="text-align: left;">{text}</p>
  </div>
</section>