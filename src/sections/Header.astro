---
import NavButton from '../components/NavButton.astro';
import HamburgerMenu from '../components/HamburgerMenu.jsx';
const navButtons = [
  { label: "HOME", href: "/" },
  { label: "GAMES", href: "/games" },
  { label: "ABOUT", href: "/about" },
];
---
<header class="header-responsive">
  <a href="/" class="header-logo" data-href="/">
    <span class="header-logo-row">
      <img src="/assets/Logo.svg" alt="Logo" style="height: 48px; width: auto; cursor: pointer; margin-right: 0.7rem;" />
      <img src="/assets/MermeladaGames.svg" alt="Logo" style="height: 48px; width: auto; cursor: pointer;" />
    </span>
  </a>
  <nav class="desktop-nav">
    <ul style="display: flex; gap: 1rem; list-style: none; margin: 0; padding: 0;">
      {navButtons.map(btn => (
        <li>
          <NavButton href={btn.href} label={btn.label} />
        </li>
      ))}
    </ul>
  </nav>
  <div class="mobile-nav">
    <HamburgerMenu navButtons={navButtons} client:only="react" />
  </div>
</header>

<script>
  declare global {
    interface Window {
      forceShowHeader?: () => void;
    }
  }
  let headerScrollListener: (() => void) | null = null;
  Object.defineProperty(window, 'headerScrollListener', {
    get() { return headerScrollListener; },
    set(v) { headerScrollListener = v; }
  });
  
  window.forceShowHeader = function() {
    const header = document.querySelector('.header-responsive');
    if (header) {
      header.classList.remove('header-hidden');
    }
  }

  function initHeaderScroll() {
    let lastScrollTop = 0;
    const header = document.querySelector('.header-responsive');
    
    if (header) {
      header.classList.remove('header-hidden');

      if (headerScrollListener) {
        window.removeEventListener('scroll', headerScrollListener);
      }

      headerScrollListener = () => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        if (scrollTop > lastScrollTop && scrollTop > 100) {
          header.classList.add('header-hidden');
        } else {
          header.classList.remove('header-hidden');
        }
        
        lastScrollTop = scrollTop <= 0 ? 0 : scrollTop;
      };
      
      window.addEventListener('scroll', headerScrollListener);
    }
  }

  function handleLogoClick() {
    const logoLink = document.querySelector('.header-logo');
    
    if (logoLink) {
      logoLink.addEventListener('click', (e) => {
        const href = logoLink.getAttribute('data-href');
        const currentPath = window.location.pathname;

        if (href === currentPath) {
          e.preventDefault();
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        }
      });
    }
  }

  function initHeader() {
    initHeaderScroll();
    handleLogoClick();
  }

  initHeader();

  document.addEventListener('astro:page-load', initHeader);
</script>

<style>
  .header-responsive {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 5rem;
    background: var(--background-color);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 10;
    transition: transform 0.3s ease-in-out;
  }
  
  .header-responsive.header-hidden {
    transform: translateY(-100%);
  }
  .desktop-nav {
    display: flex;
  }
  .mobile-nav {
    display: none;
  }
  .header-logo-row {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  @media (max-width: 767px) {
    .header-responsive {
      padding: 1rem 1.2rem;
    }
    .desktop-nav {
      display: none;
    }
    .mobile-nav {
      display: block;
    }
    .header-logo img {
      height: 40px !important;
    }
  }
</style>
</header>
