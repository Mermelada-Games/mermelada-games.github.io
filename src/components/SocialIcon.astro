---
const { href, img, alt, label } = Astro.props;
const isMail = href.startsWith('mailto:');
---
<a
  href={href}
  target={isMail ? undefined : '_blank'}
  rel={isMail ? undefined : 'noopener'}
  aria-label={label || alt}
  class="flex items-center gap-2 text-[var(--text-color)] no-underline transition-transform duration-150 hover:scale-110 active:scale-95"
>
  <img src={img} alt={alt} class="h-8 w-8" loading="lazy" />
  {label && <span>{label}</span>}
</a>
