---
const { href, label } = Astro.props;
---

<a href={href} class={`about-button`} data-href={href}>
  {label}
</a>

<style>
    .about-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5em 1em;
        border: 4px solid;
        border-color: var(--text-color);
        box-sizing: border-box;
        background: none;
        cursor: pointer;
        font-size: 1rem;
        text-decoration: none;
        color: var(--text-color);
        border-radius: 0.7em;
        transition: background 0.3s, color 0.3s;
        margin-top: 1em;
        width: auto;
    }
    .about-button:hover {
        background: var(--text-color);
        color: var(--background-color, #fff);
    }
</style>
