---
import SocialIcon from './SocialIcon.astro';
const { imgSrc, name, role, socials = [], showSocialText = false } = Astro.props;
---

<div style="
  background: var(--palette-6);
  border-radius: 2rem;
  padding: 2.5rem 1.5rem 2rem 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  width: 320px;
  min-height: 400px;
">
  <div style="
    width: 180px;
    height: 180px;
    border-radius: 50%;
    border: 6px solid var(--palette-2);
    overflow: hidden;
    margin-bottom: 2.2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  ">
    <img src={imgSrc} alt={name} style="width: 100%; height: 100%; object-fit: cover;" />
  </div>
  <div style="text-align: center;">
    <div style="font-size: 1.3rem; font-weight: bold; color: var(--palette-2); margin-bottom: 1.1rem;">{name}</div>
    <div style="font-size: 1.1rem; color: var(--palette-2); margin-bottom: 2.1rem;">{role}</div>
    <div style="display: flex; justify-content: center;">
      {socials.map(({ url, icon, label }) => (
        <SocialIcon href={url} img={icon} alt={label} label={label} showText={showSocialText} />
      ))}
    </div>
  </div>
</div>