---
import GameButton from './GameButton.astro';

export interface Props {
    imgSrc: string;
    title: string;
    buttonText?: string;
    buttonLink?: string;
    imgAlt?: string;
    textSize?: string;
    showButton?: boolean;
    imgHeight?: string;
}

const { 
    imgSrc, 
    title, 
    buttonText = "VIEW THE GAME", 
    buttonLink = "", 
    imgAlt = "Game Image",
    textSize = "4rem",
    showButton = true,
    imgHeight = "50vh"
} = Astro.props;
---

<div class="game-container">
  <img src={imgSrc} alt={imgAlt} class="game-img" style={`height: ${imgHeight}; max-height: ${imgHeight};`} />
  <div class="game-overlay">
    <h2 class="game-title" style={`font-size: ${textSize}; margin-bottom: ${showButton ? '1.5rem' : '0'};`}>{title}</h2>
    {showButton && <GameButton link={buttonLink} text={buttonText} />}
  </div>
</div>
<style>
  .game-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
  }
  .game-img {
    width: 100%;
    object-fit: cover;
    display: block;
  }
  .game-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--palette-9);
    text-align: center;
    width: 100%;
    max-width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.5s ease-in-out;
  }
  .game-title {
    text-shadow: 0 2px 8px rgba(0,0,0,0.7);
    transition: margin-bottom 0.5s ease-in-out;
    text-align: center;
    width: 100%;
  }
</style>
