---
import GameButton from './GameButton.astro';
const { imgSrc, title, buttonText, buttonLink, imgAlt } = Astro.props;
---

<div style="position: relative; width: 100vw; max-width: 100vw; overflow: hidden;">
  <img src={imgSrc} alt={imgAlt} style="width: 100vw; height: 50vh; max-height: 50vh; object-fit: cover; display: block;" />
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: var(--palette-9); text-align: center; width: 50vw;">
    <h2 style="font-size: 4rem; margin-bottom: 1.5rem; text-shadow: 0 2px 8px rgba(0,0,0,0.7);">{title}</h2>
    <GameButton link={buttonLink} text={buttonText} />
  </div>
</div>
