---
import Layout from '../../layouts/Layout.astro';
import GamesSection from '../../sections/GamesSection.astro';
import { getLangStaticPaths, t } from '../../utils/i18n.js';

export async function getStaticPaths() {
  return getLangStaticPaths();
}
---

<Layout name="Games" description={t('meta-games-description', Astro.params.lang)}>
  <div style="display: flex; flex-direction: column; gap: 5rem; margin-bottom: 5rem;">
    <GamesSection />
  </div>
</Layout>
