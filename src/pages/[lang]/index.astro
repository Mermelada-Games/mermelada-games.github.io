---
import Layout from '../../layouts/Layout.astro';
import AboutSection from '../../sections/AboutSection.astro';
import FollowUs from '../../sections/FollowUs.astro';
import Hero from '../../sections/Hero.astro';
import { getLangStaticPaths, t } from '../../utils/i18n.js';

export async function getStaticPaths() {
  return getLangStaticPaths();
}
---

<Layout>
  <Hero />
  <AboutSection
    imgSrc="/assets/mermeSvg1.svg"
    title={t('mission-title', Astro.params.lang)}
    text={t('mission-text', Astro.params.lang)}
    imgPosition="left"
    imgSize="large",
    showButton={true},
    buttonLabel={t('about', Astro.params.lang)},
    buttonHref={`/${Astro.params.lang}/about`}
  />
  <FollowUs />
</Layout>
